development: &default
  adapter: postgresql
  database: <%= app_name %>_development
  encoding: utf8
  host: localhost
  min_messages: warning
  pool: 2
  timeout: 5000

test:
  <<: *default
  database: <%= app_name %>_test

production:
  adapter: postgresql
  encoding: unicode
  host: localhost
  database: <%= app_name %>_production
  pool: 5
  username: <%= app_name %>
  password: <%%= ENV['DB_PASS'] %>
